@model TrazabilidadGanadera.Models.SaveChanges
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Guardar Cambios";
}
<div class="container" style="margin:20px auto; max-width:800px">
    @foreach (ModelState modelState in ViewData.ModelState.Values)
    {
        if (modelState.Errors.Count > 0)
        {
            <div class="alert alert-danger">
                <span class="glyphicon glyphicon-danger-sign"></span>
                <strong>Error</strong>
                @{
                    foreach (ModelError error in modelState.Errors)
                    {
                        <p>@error.ErrorMessage</p>
                    }
                }
            </div>
        }
            
    }
    <form method="post" action="savechanges">
        <h2 class="page-header">Guardar Cambios</h2>
         <div class="panel panel-danger">
             <div class="panel-heading">
                 <div class="row">
                     <div class="col-sm-6">
                         <span class="glyphicon glyphicon-warning-sign"></span>
                         <strong>Error</strong>
                     </div>
                 </div>
             </div>
             <div class="container" style="margin-top:20px;width:inherit">
                 @Model.Message
             </div>
             <div class="text-right" style="padding-right:10px;padding-bottom:10px">
                <a class="btn btn-danger" href="/">Aceptar</a>
            </div>
         </div>
    </form>
</div>